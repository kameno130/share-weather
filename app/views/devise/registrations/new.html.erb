
<div class="container-fluid" >
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image" id="sign-up-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
          <div class="card-body">
            <h5 class="card-title text-center">Create User</h5>
           
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-signin"}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-label-group">
                <%# <input type="text" id="inputUserame" class="form-control" placeholder="nickname" required autofocus> %>
                 <%= f.text_field :nickname, autocomplete: "nickname", id:"inputUsername", placeholder: "nickname",class: "form-control" %>
                 
                <label for="inputUsername">nickname</label>
               
              </div>

              <div class="form-label-group">
                <%# <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required> %>
                <%= f.email_field :email, autocomplete: "email", id:"inputEmail", placeholder: "Email address",class: "form-control" %>
                <label for="inputEmail">Email address</label>
              </div>
              
              

              <div class="form-label-group">
                <%# <input type="password" id="inputPassword" class="form-control" placeholder="Password" required> %>
                <%= f.password_field :password, autocomplete: "new-password", id: "inputPassword", class: "form-control", placeholder: "Password" %>
                <label for="inputPassword">Password</label>
                 
              </div>
              
              <div class="form-label-group">
                <%# <input type="password" id="inputConfirmPassword" class="form-control" placeholder="Password" required> %>
                <%= f.password_field :password_confirmation, autocomplete:"new-password", id: "inputConfirmPassword", class: "form-control", placeholder: "Password" %>
                <label for="inputConfirmPassword">Confirm password</label>
              </div>

              <%# <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button> %>
              <%= f.submit class:"btn btn-lg btn-primary btn-block text-uppercase"  %>

            <% end %>
              <a class="d-block text-center mt-2 small" href="/users/sign_in">Sign In</a>
              <hr class="my-4">
              <%# <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button> %>
              <a class="root-link" href="/" >Top Page</a>

          </div>
        </div>
      </div>
    </div>
  </div>
</body>


